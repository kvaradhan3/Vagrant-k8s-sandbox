#! /bin/sh

servers() {
  ruby -ryaml \
       -e 'YAML.load_file("servers.yaml")["servers"].map{|s| s["name"]}.map{|i| print("#{i} ")}
'
}

MASTER=$(servers | awk '{print $1}')
NODES=$(servers | cut -d' ' -f2-)

case $1 in
all)            HOSTS="$MASTER $NODES"  ;   shift ;;
master)         HOSTS=$MASTER           ;   shift ;;
nodes|minions)  HOSTS=$NODES            ;   shift ;;
*)              HOSTS="$MASTER $NODES"  ;;
esac

case $# in
0)  echo $HOSTS ;;
*)  for i in $HOSTS ; do
        echo "+ on $i: $@"
        ssh $i "$@"
    done
    ;;
esac
